<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h2>Create new Card</h2>

        <form action = "/trello/<%=card._id%>?_method=PUT" method="POST">
            <div class="form-group">
            <input class="form-control" type="text" name="card[name]" value= "<%=card.name%>">
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="card[category]" value= "<%=card.category%>">
            </div>
            <div class="form-group">
            <h4>Current Status:</h4>
            <% if(card.status=="ToDo"){ %>
                    <div class="form-group">
                        <h4>Current Status:</h4>
                        <input class="form-control" type="radio" name="card[status]" value="ToDo" checked="checked">To Do<br>
                        <input class="form-control" type="radio" name="card[status]" value="Doing">Doing<br>
                        <input class="form-control" type="radio" name="card[status]" value="Done">Done<br>
                    </div>   
            <%  } else if(card.status=="Doing"){ %> 
                    <div class="form-group">
                        <h4>Current Status:</h4>
                        <input class="form-control" type="radio" name="card[status]" value="ToDo">To Do<br>
                        <input class="form-control" type="radio" name="card[status]" value="Doing" checked="checked">Doing<br>
                        <input class="form-control" type="radio" name="card[status]" value="Done">Done<br>
                    </div> 
            <%  } else { %>
                    <div class="form-group">
                        <h4>Current Status:</h4>
                        <input class="form-control" type="radio" name="card[status]" value="ToDo" checked>To Do<br>
                        <input class="form-control" type="radio" name="card[status]" value="Doing">Doing<br>
                        <input class="form-control" type="radio" name="card[status]" value="Done" checked="checked">Done<br>
                    </div>
            <% } %>
            <button class="btn btn-lg btn-default">Submit!</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>